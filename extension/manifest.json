{
    "manifest_version": 3,
    "name": "Password & Data Generator",
    "version": "1.0",
    "description": "Generate secure passwords and fake data instantly",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icons/dice_16x16.png",
        "48": "icons/dice_48x48.png",
        "128": "icons/dice_128x128.png"
    },
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Password Generator"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}